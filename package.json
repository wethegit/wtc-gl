{
  "name": "wtc-gl",
  "version": "1.0.0-beta.26",
  "description": "Typescript simple Web GL library.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "umd:main": "dist/index.umd.js",
  "unpkg": "dist/index.umd.js",
  "exports": {
    ".": "./dist/index.modern.js"
  },
