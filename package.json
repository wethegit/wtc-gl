  "dependencies": {
    "wtc-math": "^1.0.13"
  },
  "devDependencies": {
    "husky": "^5.1.3",
    "microbundle": "^0.12.0",
    "prettier": "2.3.2",
    "typedoc": "^0.21.3",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wethegit/wtc-gl.git"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "types": "dist/types.d.ts",
  "keywords": [],
  "homepage": "https://github.com/wethegit/wtc-gl#readme",
